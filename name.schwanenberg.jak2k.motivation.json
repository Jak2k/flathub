{
  "app-id": "name.schwanenberg.jak2k.motivation",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.swift5"
  ],
  "command": "Motivation",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--share=network"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/swift5/bin",
    "prepend-ld-library-path": "/usr/lib/sdk/swift5/lib"
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "Motivation",
      "builddir": true,
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://git.sr.ht/~jak2k/Motivation",
          "tag": "v1.0.0",
          "commit": "842f4fb4003d6c6232085ef8573a9a425f41dce7"
        },
        "generated-sources.json"
      ],
      "build-commands": [
        "./setup-offline.sh",
        "swift build -c release --static-swift-stdlib --skip-update",
        "install -Dm755 .build/debug/Motivation /app/bin/Motivation",
        "install -Dm644 data/name.schwanenberg.jak2k.motivation.metainfo.xml $DESTDIR/app/share/metainfo/name.schwanenberg.jak2k.motivation.metainfo.xml",
        "install -Dm644 data/name.schwanenberg.jak2k.motivation.desktop $DESTDIR/app/share/applications/name.schwanenberg.jak2k.motivation.desktop",
        "install -Dm644 data/icons/name.schwanenberg.jak2k.motivation.svg $DESTDIR/app/share/icons/hicolor/scalable/apps/name.schwanenberg.jak2k.motivation.svg",
        "install -Dm644 data/icons/name.schwanenberg.jak2k.motivation-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/name.schwanenberg.jak2k.motivation-symbolic.svg"
      ]
    }
  ]
}
